                <TextField fx:id="textField" prefHeight="26.0" prefWidth="400.0" promptText="Enter Genre Type">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font></TextField>
                <Button mnemonicParsing="false" onAction="#onSearch" prefHeight="26.0" prefWidth="126.0" stylesheets="@Style.css" text="Tap to Search">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font></Button>
            </children>
        </HBox>
    </children>
