<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="180.0" prefWidth="400.0" style="-fx-background-color: #555588;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.process.EditMovieController">
   <children>
      <VBox prefHeight="180.0" prefWidth="400.0">
         <children>
            <HBox alignment="CENTER" prefHeight="30.0" prefWidth="400.0" style="-fx-background-color: #444444;">
               <children>
                  <Label fx:id="titleLabel" prefHeight="30.0" prefWidth="355.0" text="Label" textFill="#faff00">
                     <font>
                        <Font name="System Bold Italic" size="15.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="53.0" prefWidth="400.0" spacing="15.0">
               <children>
                  <Label text="Image Link :" textFill="#91ffa2">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Label>
                  <TextField fx:id="ImageLink" prefWidth="250.0" promptText="eg. https://...">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="53.0" prefWidth="400.0" spacing="15.0">
               <children>
                  <Label text="Trailer Link :" textFill="#91ffa2">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Label>
                  <TextField fx:id="TrailerLink" prefWidth="250.0" promptText="eg. https://...">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="TOP_CENTER" layoutX="10.0" layoutY="80.0" prefHeight="44.0" prefWidth="400.0" spacing="40.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onConfirm" prefHeight="32.0" prefWidth="100.0" stylesheets="@Style.css" text="UPDATE">
                     <font>
                        <Font name="System Bold Italic" size="15.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#onDelete" prefHeight="32.0" prefWidth="100.0" stylesheets="@Style.css" text="DELETE">
                     <font>
                        <Font name="System Bold Italic" size="15.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
