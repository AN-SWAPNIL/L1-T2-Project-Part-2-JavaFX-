                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Label>
                  <TextField fx:id="Budget" prefHeight="30.0" prefWidth="172.0" promptText="eg. 1200000*">
                     <font>
                        <Font name="System Bold Italic" size="14.0" />
                     </font>
                  </TextField>
                  <Label layoutX="219.0" layoutY="41.0" text="  Revenue : ($)" textFill="#93ff50">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Label>
                  <TextField fx:id="Revenue" layoutX="247.0" layoutY="37.0" prefHeight="30.0" prefWidth="170.0" promptText="eg. 1600000*">
                     <font>
                        <Font name="System Bold Italic" size="14.0" />
                     </font>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER" layoutX="10.0" layoutY="170.0" prefHeight="83.0" prefWidth="595.0" spacing="8.0">
               <children>
                  <Label text="Image Link :" textFill="#93ff50">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Label>
                  <TextField fx:id="ImageLink" prefHeight="30.0" prefWidth="173.0" promptText="eg. https://....">
                     <font>
                        <Font name="System Bold Italic" size="14.0" />
                     </font>
                  </TextField>
                  <Label layoutX="219.0" layoutY="41.0" text="  Trailer Link :" textFill="#93ff50">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Label>
                  <TextField fx:id="TrailerLink" layoutX="247.0" layoutY="37.0" prefHeight="30.0" prefWidth="172.0" promptText="eg. https://....">
                     <font>
                        <Font name="System Bold Italic" size="14.0" />
                     </font>
                  </TextField>
               </children>
            </HBox>
