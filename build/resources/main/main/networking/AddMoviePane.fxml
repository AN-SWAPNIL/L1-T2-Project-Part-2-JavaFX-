                     <font>
                        <Font name="System Bold Italic" size="14.0" />
                     </font>
                  </TextField>
                  <TextField fx:id="Genre2" layoutX="226.0" layoutY="37.0" prefHeight="26.0" prefWidth="81.0" promptText="Genre 2">
