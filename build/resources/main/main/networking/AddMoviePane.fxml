                     <font>
                        <Font name="System Bold Italic" size="15.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#onResetButton" prefHeight="35.0" prefWidth="100.0" stylesheets="@Style.css" text="RESET">
                     <font>
                        <Font name="System Bold Italic" size="15.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</Pane>
